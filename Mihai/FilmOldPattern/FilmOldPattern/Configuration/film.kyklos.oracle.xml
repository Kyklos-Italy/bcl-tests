<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net">

  <object name="OracleDbSequenceManager" type="Kyklos.Kernel.DAL.Oracle.Support.OracleDbSequenceManager, Kyklos.Kernel.DAL.Oracle">
    <constructor-arg index="0" ref="KyklosKernelDbProvider"/>
    <constructor-arg index="1" value="${KyklosKernelDefaultSchema}"/>
    <property name="Dao" ref="GenericDal"/>
  </object>

  <object name="KyklosKernelDaoHelper" type="Kyklos.Kernel.DAL.Oracle.Support.OracleDaoHelper, Kyklos.Kernel.DAL.Oracle">
    <property name="AdoTemplate" ref="KyklosKernelAdoTemplate"/>
    <property name="DbSchema" value="${KyklosKernelDefaultSchema}"/>
    <property name="SqlTextProvider" ref="KyklosKernelSqlTextProvider"/>
    <property name="MaxTableNameLength" value="30"/>
    <property name="MaxElementsForInClause" value="900"/>
    <property name="LikeChar" value="%"/>
    <property name="StringConcatenationOperator" value="||"/>
    <property name="SchemaQuoteChar" value=""/>
    <property name="DbSequenceManager" ref="OracleDbSequenceManager"/>
  </object>

  <object id="KyklosClassicAdoTemplate" type="Kyklos.Kernel.DAL.Oracle.Support.OracleKyklosAdoTemplate, Kyklos.Kernel.Dal.Oracle">
    <constructor-arg index="0" ref="KyklosKernelDbProvider"/>
    <constructor-arg index="1" ref="KyklosCommandBuilder"/>
  </object>

  <object name="KyklosCommandBuilder" type="Kyklos.Kernel.DAL.Oracle.Support.KyklosOracleCommandBuilder, Kyklos.Kernel.DAL.Oracle">
  </object>

  <object name="KyklosKernelSqlTextProvider" type="Kyklos.Kernel.DAL.Oracle.Support.OracleSqlTextProvider, Kyklos.Kernel.DAL.Oracle">
  </object>

</objects>